<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#f7f2f3"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/idIVCourse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/drawer" />


        <TextView
            android:id="@+id/idTVCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/idIVCourse"
            android:layout_toRightOf="@id/idIVCourse"
            android:text="물품 이름"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVCourse"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/idIVCourse"
            android:layout_toRightOf="@+id/idIVCourse"
            android:textColor="@color/black"
            android:text="수량" />

        <TextView
            android:id="@+id/stateCount"
            android:layout_width="52dp"
            android:layout_height="18dp"
            android:layout_below="@+id/idTVCourse"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="132dp"
            android:layout_toEndOf="@+id/item_detail"
            android:layout_toRightOf="@+id/idIVCourse"
            android:textColor="@color/black"
            android:text="개수" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>